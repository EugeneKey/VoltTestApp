<div class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <%= link_to "Volt Project", root_path, class: 'navbar-brand' %>
    </div>
      <ul class="nav navbar-nav navbar-right">
        <%= content_tag :li, class: "#{'active' if request.path == oauth_applications_path || request.path == root_path}" do %>
          <%= link_to t('doorkeeper.layouts.admin.nav.applications'), oauth_applications_path %>
        <% end %>
        <%- if current_user %>
          <li class="menu-profile">
            <%= link_to profiles_me_path, class: "avatar-link"  do %>
              <%= image_tag current_user.avatar.url(:thumb), style: "height: 40px; border-radius: 4px" %>
            <% end %>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
              <%= current_user.nickname %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <%= content_tag :li do %>
                <%= link_to 'Profile', profiles_me_path  %>
              <% end %>
              <%= content_tag :li, class: "#{'active' if request.path == edit_user_registration_path}" do %>
                <%= link_to 'Edit Profile', edit_user_registration_path %>
              <% end %>
              <li role="separator" class="divider"></li>
              <%= content_tag :li do %>
                <%= link_to 'Log out', destroy_user_session_path, method: :delete %>
              <% end %>
            </ul>
          </li>
        <%- else %>
          <%= content_tag :li do %>
            <%= link_to 'Log in', user_session_path  %>
          <% end %>
        <%- end %>
      </ul>
  </div>
</div>